{
  "name": "unmessy-api",
  "version": "2.0.0",
  "description": "Comprehensive data validation API for email, name, phone, and address with HubSpot integration",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .js",
    "lint:fix": "eslint src --ext .js --fix",
    "format": "prettier --write \"src/**/*.js\"",
    "migrate": "node scripts/migrate.js",
    "health-check": "node scripts/health-check.js"
  },
  "keywords": [
    "email-validation",
    "name-validation",
    "phone-validation",
    "address-validation",
    "data-quality",
    "hubspot",
    "api"
  ],
  "author": "Unmessy Team",
  "license": "UNLICENSED",
  "dependencies": {
    "@supabase/supabase-js": "^2.39.0",
    "axios": "^1.6.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "winston": "^3.11.0",
    "p-queue": "^8.0.1",
    "circuit-breaker-js": "^0.1.0",
    "libphonenumber-js": "^1.10.51",
    "google-libphonenumber": "^3.2.33"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-node": "^11.1.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "nodemonConfig": {
    "ignore": [
      "tests/*",
      "docs/*"
    ],
    "delay": "2500"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/index.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  }
}